{
  "manifest_version": 3,
  "name": "LinkedIn Promoted Job Remover",
  "version": "1.0",
  "description": "Automatically hides promoted jobs on LinkedIn.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": [
        "*://www.linkedin.com/jobs/collections*",
        "*://www.linkedin.com/jobs/search*"
        ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons":{
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
